# Production Configuration for Crypto Investment Committee

# Server Configuration
PORT=8080
NODE_ENV=production

# LLM Configuration (REQUIRED FOR PRODUCTION)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
LLM_PROVIDER=openai

# Security Configuration
JWT_SECRET=
SESSION_SECRET=
CORS_ORIGIN=https://yourdomain.com

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=true

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Mock Data (can disable in production)
ENABLE_MOCK_DATA=true
MOCK_DATA_SCENARIO=realistic

# Health Check
HEALTH_CHECK_ENABLED=true

# Database (optional for production scaling)
DATABASE_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=